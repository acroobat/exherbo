require codeberg [ user='dnkl' ]
require meson

SUMMARY="Modular status panel for X11 and Wayland, inspired by polybar"

LICENCES="MIT"
#LANGUAGE="C"
SLOT="0"
MYOPTIONS="X wayland"

DEPENDENCIES="
    build+run:
        dev-libs/libyaml
        dev-libs/tllist
        media-libs/fcft
        x11-libs/pixman:1
	X? (
	x11-libs/libxcb
	x11-libs/libX11
	)
	wayland? (
        sys-libs/wayland
        sys-libs/wayland-protocols
	)
"
MESON_SRC_CONFIGURE_OPTION_FEATURES=(
     'X backend-x11'
     'wayland backend-wayland'
 )
